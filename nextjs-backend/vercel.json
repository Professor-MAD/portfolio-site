{
  "version": 2,
  "builds": [
      {
          "src": "nextjs-backend/api/submit-message.js",
          "use": "@vercel/node"
      }
  ],
  "routes": [
      {
          "src": "/api/submit-message",
          "dest": "nextjs-backend/api/submit-message.js",
          "methods": ["GET", "POST", "OPTIONS"],
          "headers": {
              "Access-Control-Allow-Origin": "https://portfolio-site-c4rd.vercel.app",
              "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
              "Access-Control-Allow-Headers": "Content-Type, Authorization"
          }
      }
  ]
}
